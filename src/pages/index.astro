---
import { astroI18n, t, l } from "astro-i18n"

import Logo from '../components/Logo.astro';
import Layout from '../components/Layout.astro';
import Steps from '../components/Steps.astro';
import PetitionTextFr from '../components/PetitionTextFr.md';
import PetitionTextEn from '../components/PetitionTextEn.md';
import PeaceSign from '../components/PeaceSign.astro';
import SignCta from '../components/SignCta.astro';
import VolunteerCta from '../components/VolunteerCta.astro';
import LangSwitcher from "../components/LangSwitcher.astro";

astroI18n.init(Astro)

const { defaultLangCode, supportedLangCodes, langCode} = astroI18n
const langCodes = [defaultLangCode, ...supportedLangCodes]
const otherLangCodes = langCodes.filter(otherLangCode => otherLangCode !== langCode)

---

<Layout title={t('siteName')}>
	<main>
    <header>
      <div id="lang-switcher">
        <LangSwitcher otherLangCodes{otherLangCodes} />
      </div>

      <div id="logo">
        <Logo />
      </div>
      
      <div id="peace-sign">
        <PeaceSign />
      </div>
      
      <div>
        <h2 id="header-description">{t('headerDescription')}</h2>
      </div>
    </header>
    
    <div id="petition-text" class="narrow">
      <!-- <h2>{t('petitionTextHeading')}</h2> -->
      {langCode === 'en' ? <PetitionTextEn /> : <PetitionTextFr />}
    </div>

    <div id="sign-cta" class="cta">
      <SignCta />
    </div>

    <div id="steps">
      <h2>{t('stepsTitle')}</h2>
      <Steps />
    </div>

    {/* <div id="volunteer-cta" class="cta">
      <VolunteerCta />
    </div>
    */}

    <div id="inspiration" class="narrow">
      <h2>{t('inspirationAndReading')}</h2>
      <a href="https://vivreenville.org/nos-positions/chroniques/2020/ouvrir-les-rues.aspx" target="_blank">
        Ouvrir les rues - Vivre en Ville
      </a>
      <a href="https://collectivitesviables.org/articles/rues-pietonnes.aspx" target="_blank">
        Rues pi√©tonnes - Vivre en Ville
      </a>

      <a href="https://www.mcgilltribune.com/opinion/more-pedestrianized-streets-please-270922/" target="_blank">
        More pedestrianized streets, please - The Tribune, McGill University
      </a>
    </div>

    {/* examples of ped streets in canada/america (above)

    sponsors / supporters
    ama verdun, businesses, orgs
    youtube channels? */}

    {/* ostrich legs */}

    <footer>
      <small>
        {t('footerNoticeUnaffiliated')} <a href="https://www.promenadewellington.com/en/">SDC Wellington</a>.
      </small> 
    </footer>
	</main>
</Layout>

<style>
  header {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: white;
    text-align: center;
    padding-bottom: 2rem;
    margin-bottom: 2rem;

    background-image: url('/img/header-placeholder.jpg');
    background-size: cover;
    background-position: center;
  }

  #lang-switcher {
    width: 100%;
    display: flex;
    justify-content: flex-end;
    padding: 0.25rem 0.5rem 2rem;
  }

  #logo {
    margin-bottom: 2rem;
  }

  #peace-sign {
    display: block;
    font-size: 2rem;
    margin: 0;
  }

  #header-description {
    max-width: 30rem;
  }

  #steps {
    margin: 3rem auto;
    max-width: 60vw;
  }

  #petition-text {
    line-height: 1.6;
  }

  #inspiration {
    display: flex;
    flex-direction: column;
  }

  .cta {
    display: flex;
    flex-direction: column;
    margin: 2rem;
    text-align: center;
  }

  .narrow {
    max-width: 60vw;
    margin: 1rem auto;
  }

  footer {
    margin-top: 3rem;
    text-align: center;
  }
</style>