---
import { astroI18n, t, l } from "astro-i18n";
import InspirationAndReadingItem from "./InspirationAndReadingItem.astro";

const isEnglish = astroI18n.langCode === "en";

const articles = [
  {
    href: "https://vivreenville.org/nos-positions/chroniques/2020/ouvrir-les-rues.aspx",
    lang: "fr",
    title: "Ouvrir les rues",
    source: "Vivre en Ville",
  },
  {
    href: "https://collectivitesviables.org/articles/rues-pietonnes.aspx",
    lang: "fr",
    title: "Rues pi√©tonnes",
    source: "Vivre en Ville",
  },
  {
    href: "https://www.mcgilltribune.com/opinion/more-pedestrianized-streets-please-270922/",
    lang: "en",
    title: "More pedestrianized streets, please",
    source: "The Tribune, McGill University",
  },
];
---

<ul id="reading-links">
  {
    articles
      .sort(({ lang: langA }, { lang: langB }) => {
        return isEnglish
          ? langA.localeCompare(langB)
          : langB.localeCompare(langA);
      })
      .map((article) => <InspirationAndReadingItem {...article} />)
  }
</ul>

<style>
  #reading-links {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
  }
  @media (min-width: 980px) {
    #reading-links {
      gap: 0.5rem;
    }
  }
</style>
